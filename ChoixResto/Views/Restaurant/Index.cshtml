@model List<ChoixResto.Models.Restaurant>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des restaurants</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Modifier</th>
        </tr>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.PhoneNumber</td>
                <td>@Html.ActionLink("Modifier " + restaurant.Name, "ModifierRestaurant", new { id = restaurant.Id })</td>
            </tr>
        }
    </table>
</body>
</html>