@model ChoixResto.ViewModels.HomeViewModel

@using (Html.BeginForm())
{
<fieldset>
    <legend>Connexion :</legend>
    @Html.Label("Login")
    @Html.TextBox("login", Model.Login)
    <br />

    @Html.Label("Mot de passe")
    @Html.TextBox("mdp")
    <br />
    <input type="submit" value="Se connecter..." />
</fieldset>
}